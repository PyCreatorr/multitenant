  <%= form_with url: 'search_friend', method: :get, data: {turbo_stream: true}, class: "w-full max-w-lg" do |form| %>
    <div class="flex">
      <%# = form.label :stock, "Search for:", class: "block text-sm font-bold mb-2 text-gray-700" %>
      <div class="w-full md:w-9/12 px-2">      
        <%= form.text_field :friend, class: "mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0", placeholder: "Search" %>
      </div>
      <div class="w-full md:w-2/12 px-2">        
        <%= form.button 'submit', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mr-6 mt-1 rounded-md focus:outline-none focus:shadow-outline" do %>
            <i class="fa fa-search fa-1x text-muted pull-left"></i> 
        <% end %>
      </div>
    </div>
  <% end %>