<div id="<%= dom_id board %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= board.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Member:</strong>
    <%= board.member_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tenant:</strong>
    <%= board.tenant_id %>
  </p>

  <%#= board.id %>

  <%# if action_name != "show" %>
  <%#= link_to "Show this board", "/tenants/#{params[:tenant_id]}/boards/#{board.id}", class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Show this board", board_path(board), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>  
  <%= link_to "Edit this board", edit_board_path(board), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>  
  <%#= link_to "Edit this board", "/tenants/#{params[:tenant_id]}/boards/#{board.id}/edit", class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>  
    <%#= link_to "Show this board1", tenant_board_path(board), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%#= link_to "Edit this board", edit_tenant_board_path(board), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <%# end %>
</div>
