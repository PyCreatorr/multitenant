<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @tenant %>

    <%= link_to "Edit this tenant", edit_tenant_path(@tenant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this tenant", tenant_path(@tenant), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to tenants", tenants_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  
    <div>
      <%#= @tenant %>
      <br>
      <h1>BOARDS:</h1>
      <% @tenant.boards.each do |board| %>
        <%#= board.name%><br>
        
        <%= render partial: "boards/board", locals: { board: board} %>
      <% end %>    
    </div>
  
  
  </div>

  
<div class="inline-block ml-2">
  <%= link_to "Members", tenant_members_path(@tenant) %>
  <%#= link_to "Boards", tenant_boards_path(@tenant) %>
  </div>



</div>
